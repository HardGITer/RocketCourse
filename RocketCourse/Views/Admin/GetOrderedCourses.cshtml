@model IEnumerable<RocketCourse.Models.OrderedCourse>

<h2>Заказанные курсы</h2>

<table class="table">
    <tr>
        <th>
            Пользователь:
        </th>
        <th>
            Заказанный курс:
        </th>
        <th>
            Дата заказа:
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderedCourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.ActionLink("Удалить", "DeleteOrder", new { id=item.Id })
        </td>
    </tr>
}

</table>
@Html.ActionLink("Очистить", "DeleteAllOrders")
