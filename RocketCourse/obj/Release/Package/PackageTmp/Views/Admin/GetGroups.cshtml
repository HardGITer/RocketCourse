@model IEnumerable<RocketCourse.Models.Group>

<h2>Группы:</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PersonCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseId)
        </th>
        <th>название курса</th>
        <th>
            @Html.DisplayNameFor(model => model.DateStart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateEnd)
        </th>
        <th>
            Участники
        </th>
    </tr>
    @foreach (var item in Model.ToList())
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseId)
            </td>
            <td>
                @item.Course.Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateEnd)
            </td>
                <td>
                    @Html.DropDownListFor(modelItem => item.Users, new SelectList(item.Users.ToList(),"Mail","Mail"))
                </td>
            <td>
                @Html.ActionLink("Изменить", "EditGroup", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "DeleteGroup", new { id = item.Id }) |
                @Html.ActionLink("Добавить пользователя", "AddUserInGroup", new { groupid = item.Id })
            </td>
        </tr>
    }

</table>
